<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="/">
                    <BarIcon IconName="IconName.Dashboard" />
                    Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/Users">
                    <BarIcon IconName="IconName.User" />
                    User
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/UpdateScores">
                    <BarIcon IconName="IconName.Poll" />
                    Update Score
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown @bind-Visible="pagesBarVisible">
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.DotCircle" />
                       Live
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/AddLives">
                            <BarIcon IconName="IconName.Add" />
                            Add lives
                        </BarDropdownItem>
                        <BarDropdownItem To="/UpdateLive">
                            <BarIcon IconName="IconName.Edit" />
                            All lives
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown @bind-Visible="pagesBarVisible">
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Video" />
                        Highlights
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/AddHighlight">
                            <BarIcon IconName="IconName.Add" />
                            Add Highlights
                        </BarDropdownItem>
                        <BarDropdownItem To="/UpdateHighlights">
                            <BarIcon IconName="IconName.Edit" />
                            All Highlights
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

        </BarStart>
       @* <BarEnd>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Smartphone" />
                        Apps
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/apps/todo">
                            Todo
                        </BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarEnd>*@
    </BarMenu>
</Bar>
@code {
    private bool pagesBarVisible = true;

    RenderFragment customIcon =@<img src="/brand-logo.png" style="width:32px; height: 32px" />;
}