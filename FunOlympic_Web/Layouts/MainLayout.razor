@using FunOlympic_Web.Components.Layout

@inherits LayoutComponentBase
   <Layout>
    <LayoutHeader Fixed>
        <TopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                 ThemeGradientChanged="@OnThemeGradientChanged"
                 ThemeRoundedChanged="@OnThemeRoundedChanged"
                 ThemeColorChanged="@OnThemeColorChanged"
                 />
    </LayoutHeader>
  
        <Layout Sider>
        <AuthorizeView Roles="Admin">
            <LayoutSider>
                <LayoutSiderContent>
                    <SideMenu />
                </LayoutSiderContent>

            </LayoutSider>

        </AuthorizeView>
            <Layout>
            <LayoutContent Background="Background.Light" Padding="Padding.Is2.OnX" Margin="Margin.Is2.OnY.Is4.OnX">
                    @Body
                </LayoutContent>
            <LayoutFooter>
                <FooterMenu />
            </LayoutFooter>
            </Layout>
        </Layout>
    </Layout>

